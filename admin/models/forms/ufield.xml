<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: question.xml 62 2010-11-28 16:08:16Z chdemko $ -->
<form>
	<fieldset name="details">
		<field
			name="uf_id"
			type="hidden"
		/>
		<field
			name="published"
			type="list"
			id="published"
			class="inputbox"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			size="1"
			default="1"
			filter="integer">
			<option	value="1">JPUBLISHED</option>
			<option	value="0">JUNPUBLISHED</option>
		</field>
		<field 
			name="ordering" 
			type="OrderUField" 
			class="inputbox"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC" 
		/>
		<field
			name="uf_sname"
			type="text"
			extension="com_continued"
			class="inputbox"
			size="40"
			label="COM_CONTINUED_UFIELD_FIELD_SNAME_LABEL"
			description="COM_CONTINUED_UFIELD_FIELD_SNAME_DESC"
			required="true" />
		<field
			name="uf_name"
			type="text"
			extension="com_continued"
			class="inputbox"
			size="60"
			label="COM_CONTINUED_UFIELD_FIELD_NAME_LABEL"
			description="COM_CONTINUED_UFIELD_FIELD_NAME_DESC"
			required="true" />
		<field
			name="uf_type"
			type="list"
			extension="com_continued"
			class="inputbox"
			default=""
			label="COM_CONTINUED_UFIELD_FIELD_TYPE_LABEL"
			description="COM_CONTINUED_UFIELD_FIELD_TYPE_DESC"
			required="true">
			<option value="textar">Text Box</option>
			<option value="textbox">Text Field</option>
			<option value="multi">Radio Select</option>
			<option value="cbox">Check Box</option>
			<option value="mcbox">Multi Checkbox</option>
			<option value="yesno">Yes / No</option>
			<option value="dropdown">Drop Down</option>
			<option value="message">Message</option>
			<option value="email">EMail</option>
			<option value="username">UserName</option>
			<option value="phone">Phone</option>
		</field>
		<field
			name="uf_req"
			type="radio"
			label="COM_CONTINUED_UFIELD_FIELD_REQ_LABEL"
			description="COM_CONTINUED_UFIELD_FIELD_REQ_DESC"
			size="1"
			class="inputbox"
			required="true"
			default="0">
			<option	value="1">Yes</option>
			<option	value="0">No</option>
		</field>
		<field 
			name="uf_match" 
			type="FieldMatch" 
			class="inputbox"
			label="COM_CONTINUED_UFIELD_FIELD_MATCH_LABEL"
			description="COM_CONTINUED_UFIELD_FIELD_MATCH_DESC" 
		/>
	</fieldset>
	<fieldset name="content">
		<field
			name="uf_note"
			type="editor"
			label="COM_CONTINUED_UFIELD_FIELD_NOTE_LABEL"
			description="COM_CONTINUED_UFIELD_FIELD_NOTE_DESC"
			class="inputbox"
			filter="safehtml"
			buttons="false"
		/>
	</fieldset>
	<fieldset>
		<field name="fieldgroups" type="hidden" />
	</fieldset>
	

</form>

