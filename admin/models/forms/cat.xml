<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: question.xml 62 2010-11-28 16:08:16Z chdemko $ -->
<form>
	<fieldset name="details">
		<field
			name="cat_id"
			type="hidden"
		/>
		<field
			name="published"
			type="list"
			id="published"
			class="inputbox"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			size="1"
			default="1"
			filter="integer">
			<option	value="1">JPUBLISHED</option>
			<option	value="0">JUNPUBLISHED</option>
			<option	value="2">JARCHIVED</option>
			<option	value="-2">JTRASHED</option>
		</field>
		<field
			name="cat_name"
			type="text"
			label="COM_CONTINUED_CAT_FIELD_NAME_LABEL"
			description="COM_CONTINUED_CAT_FIELD_NAME_DESC"
			size="60"
			class="inputbox"
			required="true"
			default=""
		/>
		<field
			name="cat_desc"
			type="textarea"
			label="COM_CONTINUED_CAT_FIELD_DESC_LABEL"
			description="COM_CONTINUED_CAT_FIELD_DESC_DESC"
			rows="4"
			cols="70"
			class="inputbox"
			filter="safehtml"
			buttons="false"
		/>
		<field
			name="cat_prev"
			type="radio"
			label="COM_CONTINUED_CAT_FIELD_PREV_LABEL"
			description="COM_CONTINUED_CAT_FIELD_PREV_DESC"
			size="1"
			class="inputbox"
			default="0">
			<option	value="1">Yes</option>
			<option	value="0">No</option>
		</field>
		<field
			name="cat_menu"
			type="Cats"
			class="inputbox"
			label="COM_CONTINUED_CAT_FIELD_MENU_LABEL"
			description="COM_CONTINUED_CAT_FIELD_MENU_DESC"
			required="false"
		/>
		<field 
			name="cat_start" type="calendar"
			label="COM_CONTINUED_CAT_FIELD_STARTDATE_LABEL"
			description="COM_CONTINUED_COURSE_FIELD_STARTDATE_DESC"
			filter="user_utc"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
		/>
		<field 
			name="cat_end" type="calendar"
			label="COM_CONTINUED_CAT_FIELD_ENDDATE_LABEL"
			description="COM_CONTINUED_COURSE_FIELD_ENDDATE_DESC"
			filter="user_utc"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
		/>
	</fieldset>
	<fieldset name="fmsettings">
		<field
			name="cat_hasfm"
			type="radio"
			label="COM_CONTINUED_CAT_FIELD_HASFM_LABEL"
			description="COM_CONTINUED_CAT_FIELD_HASFM_DESC"
			size="1"
			class="inputbox"
			required="true"
			default="0">
			<option	value="1">Yes</option>
			<option	value="0">No</option>
		</field>
		<field
			name="cat_fmlink"
			type="radio"
			label="COM_CONTINUED_CAT_FIELD_FMLINK_LABEL"
			description="COM_CONTINUED_CAT_FIELD_FMLINK_DESC"
			size="1"
			class="inputbox"
			required="true"
			default="0">
			<option	value="1">Yes</option>
			<option	value="0">No</option>
		</field>
	</fieldset>
	<fieldset name="fmcontent">
		<field
			name="cat_fm"
			type="editor"
			label="COM_CONTINUED_CAT_FIELD_FM_LABEL"
			description="COM_CONTINUED_CAT_FIELD_FM_DESC"
			class="inputbox"
			filter="safehtml"
			buttons="false"
		/>
	</fieldset>
	<fieldset name="purchase">
		<field
			name="cat_free"
			type="radio"
			label="COM_CONTINUED_CAT_FIELD_FREE_LABEL"
			description="COM_CONTINUED_CAT_FIELD_FREE_DESC"
			size="1"
			class="inputbox"
			required="true"
			default="1">
			<option	value="1">Yes</option>
			<option	value="0">No</option>
		</field>
		<field
			name="cat_sku"
			type="text"
			label="COM_CONTINUED_CAT_FIELD_SKU_LABEL"
			description="COM_CONTINUED_CAT_FIELD_SKU_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="cat_skulink"
			type="text"
			label="COM_CONTINUED_CAT_FIELD_SKULINK_LABEL"
			description="COM_CONTINUED_CAT_FIELD_SKULINK_DESC"
			size="60"
			class="inputbox"
			default=""
		/>
	
	</fieldset>

</form>

