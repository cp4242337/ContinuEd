<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: question.xml 62 2010-11-28 16:08:16Z chdemko $ -->
<form>
	<fieldset name="details">
		<field
			name="q_id"
			type="hidden"
		/>
		<field
			name="published"
			type="list"
			id="published"
			class="inputbox"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			size="1"
			default="1"
			filter="integer">
			<option	value="1">JPUBLISHED</option>
			<option	value="0">JUNPUBLISHED</option>
		</field>
		<field 
			name="q_course" 
			type="Courses" 
			class="inputbox"
			label="COM_CONTINUED_QUESTION_FIELD_POLL_LABEL"
			description="COM_CONTINUED_QUESTION_FIELD_POLL_DESC" 
		/>
		<field 
			name="ordering" 
			type="OrderQuestion" 
			class="inputbox"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC" 
		/>
		<field
			name="q_cat"
			type="list"
			extension="com_continued"
			class="inputbox"
			default=""
			label="COM_CONTINUED_QUESTION_FIELD_CAT_LABEL"
			description="COM_CONTINUED_QUESTION_FIELD_CAT_DESC"
			required="true">
			<option value="eval">Evaluation</option>
			<option value="assess">Assessment</option>
			<option value="message">Message</option>
		</field>
		<field
			name="q_type"
			type="list"
			extension="com_continued"
			class="inputbox"
			default=""
			label="COM_CONTINUED_QUESTION_FIELD_TYPE_LABEL"
			description="COM_CONTINUED_QUESTION_FIELD_TYPE_DESC"
			required="true">
			<option value="textar">Text Box</option>
			<option value="textbox">Text Field</option>
			<option value="multi">Radio Select</option>
			<option value="cbox">Check Box</option>
			<option value="mcbox">Multi Checkbox</option>
			<option value="yesno">Yes / No</option>
			<option value="dropdown">Drop Down</option>
			<option value="message">Message</option>
		</field>
		<field 
			name="q_part" 
			type="QuestionPart" 
			class="inputbox"
			label="COM_CONTINUED_QUESTION_FIELD_POLL_LABEL"
			description="COM_CONTINUED_QUESTION_FIELD_POLL_DESC" 
		/>
		<field
			name="q_req"
			type="radio"
			label="COM_CONTINUED_QUESTION_FIELD_REQ_LABEL"
			description="COM_CONTINUED_QUESTION_FIELD_REQ_DESC"
			size="1"
			class="inputbox"
			required="true"
			default="0">
			<option	value="1">Yes</option>
			<option	value="0">No</option>
		</field>
		<field 
			name="q_depq" 
			type="QuestionsDependable" 
			class="inputbox"
			label="COM_CONTINUED_QUESTION_FIELD_DEPQ_LABEL"
			description="COM_CONTINUED_QUESTION_FIELD_DEPQ_DESC" 
		/>
		<field 
			name="q_addedby" 
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL" 
			description="JGLOBAL_FIELD_CREATED_BY_Desc"
		 />
	</fieldset>
	<fieldset name="content">
		<field
			name="q_text"
			type="editor"
			label="COM_CONTINUED_ANSWER_FIELD_NAME_LABEL"
			description="COM_CONTINUED_ANSWER_FIELD_NAME_DESC"
			class="inputbox"
			required="true"
			filter="safehtml"
			buttons="false"
		/>
		<field
			name="q_expl"
			type="editor"
			label="COM_CONTINUED_OPTION_FIELD_EXPL_LABEL"
			description="COM_CONTINUED_OPTION_FIELD_EXPL_DESC"
			class="inputbox"
			filter="safehtml"
			buttons="false"
		/>
	</fieldset>
	

</form>

