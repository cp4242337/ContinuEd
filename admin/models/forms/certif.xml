<form>
	<fieldset name="details">
		<field
			name="ctmpl_id"
			type="hidden"
		/>
		<field
			name="published"
			type="list"
			id="published"
			class="inputbox"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			size="1"
			default="1"
			filter="integer">
			<option	value="1">JPUBLISHED</option>
			<option	value="0">JUNPUBLISHED</option>
			<option	value="2">JARCHIVED</option>
			<option	value="-2">JTRASHED</option>
		</field>
		
		<field 
			name="ctmpl_cert" 
			type="CertTypes" 
			class="inputbox"
			label="COM_CONTINUED_CERTIF_FIELD_CERTTYPE_LABEL"
			description="COM_CONTINUED_CERTIF_FIELD_CERTTYPE_DESC" 
		/>
		<field 
			name="ctmpl_prov" 
			type="Providers" 
			class="inputbox"
			label="COM_CONTINUED_CERTIF_FIELD_PROVIDER_LABEL"
			description="COM_CONTINUED_CERTIF_FIELD_PROVIDER_DESC" 
		/>
	</fieldset>
	<fieldset name="content">
		<field
			name="ctmpl_content"
			type="editor"
			label="COM_CONTINUED_CERTIF_FIELD_CONTENT_LABEL"
			description="COM_CONTINUED_CERTIF_FIELD_CONTENT_DESC"
			class="inputbox"
			filter="safehtml"
			buttons="false"
		/>
	</fieldset>
	

</form>

