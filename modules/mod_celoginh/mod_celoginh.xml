<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>mod_celoginh</name>
	<author>Corona Productions and Joomla! Project</author>
	<creationDate>July 2006</creationDate>
	<copyright>Copyright 2012 Corona Productions and Copyright (C) 2005 - 2012 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@coronapro.com</authorEmail>
	<authorUrl>www.coronapro.com</authorUrl>
	<version>1.0.0</version>
	<description>MOD_CELOGINH_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_celoginh">mod_celoginh.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_celoginh.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_celoginh.ini</language>
		<language tag="en-GB">en-GB.mod_celoginh.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_LOGIN" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				
				<field
					name="login"
					type="menuitem"
					disable="separator"
					label="MOD_CELOGINH_FIELD_LOGIN_REDIRECTURL_LABEL"
					description="MOD_CELOGINH_FIELD_LOGIN_REDIRECTURL_DESC" >
					<option
						value="">JDEFAULT</option>
				</field>
				<field
					name="logout"
					type="menuitem"
					disable="separator"
					label="MOD_CELOGINH_FIELD_LOGOUT_REDIRECTURL_LABEL"
					description="MOD_CELOGINH_FIELD_LOGOUT_REDIRECTURL_DESC" >
					<option
						value="">JDEFAULT</option>
				</field>
				<field
					name="greeting"
					type="radio"
					default="1"
					label="MOD_CELOGINH_FIELD_GREETING_LABEL"
					description="MOD_CELOGINH_FIELD_GREETING_DESC">
					<option
						value="0">JNo</option>
					<option
						value="1">JYes</option>
				</field>
				<field
					name="name"
					type="list"
					default="0"
					label="MOD_CELOGINH_FIELD_NAME_LABEL"
					description="MOD_CELOGINH_FIELD_NAME_DESC">
					<option
						value="0">MOD_CELOGINH_VALUE_NAME</option>
					<option
						value="1">MOD_CELOGINH_VALUE_USERNAME</option>
				</field>
				<field
					name="usesecure"
					type="radio"
					default="0"
					label="MOD_CELOGINH_FIELD_USESECURE_LABEL"
					description="MOD_CELOGINH_FIELD_USESECURE_DESC">
					<option
						value="0">JNo</option>
					<option
						value="1">JYes</option>
				</field>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
